<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_payment_provider_yape_form" model="ir.ui.view">
        <field name="name">payment.provider.yape.form</field>
        <field name="model">payment.provider</field>
        <field name="inherit_id" ref="payment.payment_provider_form"/>
        <field name="arch" type="xml">
            <group name="provider_credentials" position="inside">
                <group invisible="code != 'yape'">
                    <field name="yape_qr" widget="image" required="code == 'yape' and state != 'disabled'"/>
                    <field name="yape_holder_name" required="code == 'yape' and state != 'disabled'" />
                    <field name="yape_phone" required="code == 'yape' and state != 'disabled'" />
                </group>
            </group>
        </field>
    </record>
</odoo>
